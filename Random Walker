let x, y;

function setup() {
  createCanvas(500, 500);
  background(0);

  // Start from center
  x = width / 2;
  y = height / 2;
}

function draw() {
  stroke(0, 255, 200);
  strokeWeight(3);

  // Draw current position
  point(x, y);

  // Random direction
  let choice = floor(random(4));

  if (choice === 0) {
    x += 5; // right
  } else if (choice === 1) {
    x -= 5; // left
  } else if (choice === 2) {
    y += 5; // down
  } else {
    y -= 5; // up
  }
}
